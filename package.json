{
  "name": "nifty-types",
  "version": "1.0.2",
  "description": "Nifty Types for TypeScript",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "coverage": "rm -rf coverage && nyc --reporter lcov mocha --require ts-node/register ./src/**/*.spec.ts",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "test:watch": "yarn test --reporter nyan -w --watch-extensions ts",
    "test": "./node_modules/.bin/mocha --require ts-node/register ./src/**/*.spec.ts",
    "run": "ts-node ./src/index.ts",
    "pre-publish": "rm -rf lib && tsc --declaration -p ./tsconfig.json --outDir lib/"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddoronin/nifty-types.git"
  },
  "author": "Dima Doronin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddoronin/nifty-types/issues"
  },
  "homepage": "https://github.com/ddoronin/nifty-types#readme",
  "dependencies": {
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^5.1.0",
    "nyc": "^11.6.0",
    "sinon": "^4.5.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1"
  }
}
