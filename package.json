  "bugs": {
    "url": "https://github.com/ddoronin/nifty-types/issues"
  },
  "homepage": "https://github.com/ddoronin/nifty-types#readme",
  "dependencies": {
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "mocha": "^5.1.0",
    "sinon": "^4.5.0",
    "ts-node": "^5.0.1"
  }
}
